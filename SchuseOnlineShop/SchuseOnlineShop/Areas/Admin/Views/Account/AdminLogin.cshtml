
﻿
@model AdminLoginVM

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<title>Admin Panel Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/admin/assets/admin-login/css/style.css">

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div>
						<a asp-area="null" asp-controller="Home" asp-action="Index" class="btn btn-success">Back to site</a>
					</div>
					<div class="login-wrap p-4 p-md-5">
						<div class="icon d-flex align-items-center justify-content-center">
							<span class="fa fa-user-o"></span>
						</div>
						<h3 class="text-center mb-4">Have an account?</h3>
						<form form method="post" asp-area="Admin" asp-controller="Account" asp-action="AdminLogin">
							<div class="form-group">
								<input type="text" asp-for="EmailOrUsername" class="form-control rounded-left" placeholder="Username" required>
							</div>
							<div class="form-group d-flex">
								<input type="password" asp-for="Password" class="form-control rounded-left" placeholder="Password" required>
							</div>
							<div class="form-group d-md-flex">
								
							</div>
							<div class="form-group">
								<button type="submit" class="btn btn-primary rounded submit p-3 px-5">Get Started</button>
							</div>
						</form>

					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/admin/assets/admin-login/js/jquery.min.js"></script>
	<script src="~/admin/assets/admin-login/js/popper.js"></script>
	<script src="~/admin/assets/admin-login/js/bootstrap.min.js"></script>
	<script src="~/admin/assets/admin-login/js/main.js"></script>

</body>
</html>













